root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{PL,pl,pm,t,toml}]
charset = utf-8
indent_size = 4

[*.{html}]
charset = utf-8
indent_size = 2

[*.{json}]
indent_size = 3

[*.{yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[cpanfile]
indent_size = 2
